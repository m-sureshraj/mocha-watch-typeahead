{
  "name": "mocha-watch-typeahead",
  "version": "0.0.1",
  "description": "An attempt to add interactive watch mode support for the mocha test framework.",
  "bin": {
    "mocha-watch": "./bin/mocha-watch.js"
  },
  "engines": {
    "node": ">= 10.12.0"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "test": "",
    "lint": "eslint '**/*.js'",
    "lint-fix": "eslint --fix",
    "prettier": "prettier --write"
  },
  "prettier": "@sureshraj/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint-fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m-sureshraj/mocha-watch-typeahead.git"
  },
  "keywords": [
    "mocha",
    "cli",
    "typeahead"
  ],
  "author": "Sureshraj <m.s.suresh100@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/m-sureshraj/mocha-watch-typeahead/issues"
  },
  "homepage": "https://github.com/m-sureshraj/mocha-watch-typeahead#readme",
  "dependencies": {
    "ansi-escapes": "^4.3.1",
    "camelcase": "^6.0.0",
    "chokidar": "3.4.2",
    "is-glob": "^4.0.1",
    "kleur": "^4.1.1",
    "micromatch": "^4.0.2",
    "strip-ansi": "^6.0.0"
  },
  "peerDependencies": {
    "mocha": "8.1.3"
  },
  "devDependencies": {
    "@sureshraj/prettier-config": "^1.0.0",
    "debug": "^4.1.1",
    "eslint": "^7.9.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "prettier": "2.1.2"
  }
}
